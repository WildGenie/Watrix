<Window x:Class="Watrix.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Watrix"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowState="Maximized"
        Title="Overlay" Height="600" Width="900">
    <Grid Name="BackgroundPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
            <Button Name="DebugBtn" Content="Debug" Padding="10" Click="DebugBtn_Click" />
            <Button Name="ExitBtn" Content="Close" Padding="10" Click="ExitBtn_OnClick" />
        </StackPanel>
        <UniformGrid Grid.Row="1" Grid.Column="1" Background="Aqua" DockPanel.Dock="Top">
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
            <Border Padding="10">
                <DockPanel Background="Blue" />
            </Border>
        </UniformGrid>
    </Grid>
</Window>